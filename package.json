{
  "description": "linting for treestamps",
  "scripts": {
    "check": "remark . --quiet",
    "fix": "eslint_d --cache --fix --ext .cjs,.mjs.js,.json,.yaml,.md . && prettier --write .",
    "lint": "eslint_d --cache --ext .cjs,.mjs.js,.json,.yaml,.md . && prettier --check .",
    "remark-check": "remark .",
    "remark-fix": "remark . --output"
  },
  "prettier": {
    "plugins": [
      "@prettier/plugin-xml",
      "prettier-plugin-packagejson",
      "prettier-plugin-sh"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "gfm",
      "preset-lint-consistent",
      "preset-lint-markdown-style-guide",
      "preset-lint-recommended",
      "preset-prettier"
    ]
  },
  "devDependencies": {
    "@fsouza/prettierd": "^0.25.2",
    "@prettier/plugin-xml": "^3.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-plugin-prettier": "^5.0.0-alpha.2",
    "eslint-plugin-yaml": "^0.5.0",
    "eslint_d": "^13.1.2",
    "markdown-eslint-parser": "^1.2.1",
    "prettier": "^3.0.0",
    "prettier-plugin-packagejson": "^2.4.4",
    "prettier-plugin-sh": "^0.14.0",
    "remark": "^15.0.1",
    "remark-cli": "^12.0.0",
    "remark-gfm": "^4.0.0",
    "remark-preset-lint-consistent": "^5.1.1",
    "remark-preset-lint-markdown-style-guide": "^5.1.2",
    "remark-preset-lint-recommended": "^6.1.2",
    "remark-preset-prettier": "^2.0.1"
  }
}
